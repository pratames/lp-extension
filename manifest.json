{
    "manifest_version": 3,
    "name": "Screenshot Extension",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "downloads",
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "commands": {
        "take_default_screenshot": {
            "suggested_key": {
                "default": "Ctrl+Shift+Y"
            },
            "description": "Take default screenshot"
        }
    }
}